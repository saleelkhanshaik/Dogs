<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragments.DogDeatils">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/icon_dog"
                android:id="@+id/dogImageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:minHeight="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/dogName"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_below="@+id/dogImageView"
                android:text="dogName"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/dogpurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dogName"
                android:text="Dogpurpose"
                android:layout_margin="4dp"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/dogtemparment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dogpurpose"
                android:text="Dog temparement"
                android:layout_margin="4dp"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/doglifespam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dogtemparment"
                android:text="Dog LifeSpam"
                android:layout_margin="4dp"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</layout>